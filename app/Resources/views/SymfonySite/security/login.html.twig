{% extends 'SymfonySite/base.html.twig' %}

{% block title %}
  Login page
{% endblock %}
    
{% block body %}
  <main class="login-page">
    {% if error %}
        <div >{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="login-container" action="{{ path('login') }}" method="post">
		<ul>
            <li>
                
				<label for="username" class="login-label">Username:</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}"/><br />
            </li>
            <li>
				  
				<label for="password" class="login-label">Password:</label>
				<input type="password" id="password" name="_password"/>        
			   
            </li>
            <li>
				<button type="submit">login</button>
            </li>
         </ul>
		  
		  
		

		 <p>Don't have an account? You can sign up <a href="{{ path('user_signup') }}">here</a></p>
    </form>
   
  </main>
{% endblock %}